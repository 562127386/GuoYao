<script>
    var keyValue = $.request("keyValue");
    $(function () {
	initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/GY/GY_YY/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });

	 //初始化组件
    function initControl()
    {     

        //$("#salesman").select2({
        //    //placeholder: "please select demo",
