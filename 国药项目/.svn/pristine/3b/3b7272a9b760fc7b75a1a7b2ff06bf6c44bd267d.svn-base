        //    closeOnSelect: false
        //});
      
       // $("#select2-salesman-container").empty();
        $("#salesman").bindSelect({
            id:"text",
            url: "/SysManage/User/GetYYFormComboBox",           
            //url: "/SysManage/ItemsDetail/GetSelectJson",
            param: { code: "salesman" },

            defaultContent: "",//默认破坏样式
            multiple: true,
            closeOnSelect:false
        });

        $("#salesman").val([""]).trigger("change");

        $("#manager").bindSelect({
            id: "text",
            url: "/SysManage/User/GetYYFormComboBox",
            param: { code: "manager" },            
        })
    }


    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        $.submitForm({
            url: "/GY/GY_YY/SaveForm?keyValue=" + keyValue,
            param: postData,
            success: function () {
                var parentTabId = top.$.jfinetab.getCurrentTabParentId();
                var resultPage = top.$.jfinetab.getTabContentFromId(parentTabId);
                resultPage.refreshGrid();
                top.$.jfinetab.closeCurrentTab();
            }
        })
    }
	//关闭Form
    function closeForm() {
        top.$.jfinetab.closeCurrentTab();
    }
</script>

