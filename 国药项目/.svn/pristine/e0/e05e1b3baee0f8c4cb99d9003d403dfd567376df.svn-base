            List<GY_BL_DEntity> list = JsonHelper.ToList<GY_BL_DEntity>(ScoreList);
            List<GY_BL_DEntity> list_item = ScoreList.ToList<GY_BL_DEntity>();
            foreach (var item in list_item)
            {
                item.BindId = gY_BLEntity.Id;
                if (!string.IsNullOrEmpty(item.Id))
                {
                    item.Modify(item.Id);
                    db.Update(item);
                }
                else
                {
                    item.Create();
                    db.Insert(item);
                }
            }

            try
            {
                db.Commit();
            }
            catch (Exception)
            {
                db.Rollback();
                throw;
            }

        }

